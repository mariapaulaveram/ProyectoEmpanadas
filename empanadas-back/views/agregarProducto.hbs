<link rel="stylesheet" href="/stylesheets/productos.css">

<div class="producto-agregar-container">
  <h1 class="producto-agregar-titulo">Agregar nuevo producto</h1>

  {{#if error}}
    <p class="producto-agregar-error">{{message}}</p>
  {{/if}}

  <form action="/admin/productosAdmin/agregar" method="POST" enctype="multipart/form-data" class="producto-agregar-form">
    <div class="form-grupo">
      <label for="nombre" class="form-label">Nombre:</label>
      <input type="text" name="nombre" id="nombre" class="form-input" required>
    </div>

    <div class="form-grupo">
      <label for="descripcion" class="form-label">Descripci√≥n:</label>
      <textarea name="descripcion" id="descripcion" class="form-textarea" required></textarea>
    </div>

    <div class="form-grupo">
      <label for="precio" class="form-label">Precio:</label>
      <input type="number" name="precio" id="precio" class="form-input" step="0.01" required>
    </div>

    <div class="form-grupo">
      <label for="foto" class="form-label">Imagen:</label>
      <input type="file" name="foto" id="foto" class="form-file" accept="image/*">
    </div>

    <button type="submit" class="btn btn-dark producto-agregar-btn">
      <i class="fa fa-plus"></i> Agregar producto
    </button>
  </form>
</div>

